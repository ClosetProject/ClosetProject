<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/caiv_s_img"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/catv_s_seq"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/aaaa" />

    <TextView
        android:id="@+id/catv_s_seq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="24dp"
        android:text="1"
        android:textColor="#626665"
        android:textSize="25sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@+id/caiv_s_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/catv_s_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="커먼유니크"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/caiv_s_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/catv_s_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:text="# 청순 # 하늘하늘"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/caiv_s_img"
        app:layout_constraintTop_toBottomOf="@+id/catv_s_name" />
</androidx.constraintlayout.widget.ConstraintLayout>