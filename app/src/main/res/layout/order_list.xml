<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="2022.07.07"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/p_order_img"
        android:layout_width="108dp"
        android:layout_height="88dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/nemo"
        app:layout_constraintEnd_toEndOf="@+id/order_date"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_date"
        app:srcCompat="@drawable/p_tano"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/order_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="43dp"
        android:text="결제완료"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/p_order_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/p_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20,000원"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.852"
        app:layout_constraintStart_toEndOf="@+id/p_order_img"
        app:layout_constraintTop_toBottomOf="@+id/p_order_size" />

    <TextView
        android:id="@+id/s_order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:text="[커먼유니크]"
        android:textColor="#302D2D"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/p_order_img"
        app:layout_constraintTop_toBottomOf="@+id/order_pay" />

    <TextView
        android:id="@+id/p_order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:text="체크 무늬무늬"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/s_order_name"
        app:layout_constraintStart_toEndOf="@+id/s_order_name"
        app:layout_constraintTop_toTopOf="@+id/s_order_name" />

    <TextView
        android:id="@+id/p_order_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:text="블랙"
        app:layout_constraintStart_toEndOf="@+id/p_order_img"
        app:layout_constraintTop_toBottomOf="@+id/p_order_name" />

    <TextView
        android:id="@+id/p_order_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="4dp"
        android:text="FREE"
        app:layout_constraintBottom_toBottomOf="@+id/p_order_color"
        app:layout_constraintStart_toEndOf="@+id/order_text"
        app:layout_constraintTop_toTopOf="@+id/p_order_color"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/order_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="|"
        app:layout_constraintBottom_toBottomOf="@+id/p_order_color"
        app:layout_constraintStart_toEndOf="@+id/p_order_color"
        app:layout_constraintTop_toTopOf="@+id/p_order_color" />

</androidx.constraintlayout.widget.ConstraintLayout>