<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/p_img"
        android:layout_width="99dp"
        android:layout_height="87dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/nemo"
        app:layout_constraintBottom_toBottomOf="@+id/check"
        app:layout_constraintStart_toEndOf="@+id/check"
        app:layout_constraintTop_toTopOf="@+id/check"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/viling" />

    <TextView
        android:id="@+id/p_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="흰색/FREE"
        app:layout_constraintEnd_toEndOf="@+id/p_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/p_name"
        app:layout_constraintTop_toBottomOf="@+id/p_name" />

    <Button
        android:id="@+id/p_change"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:text="옵션변경"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/p_cnt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/p_point"
        app:layout_constraintTop_toBottomOf="@+id/p_point"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/p_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="52dp"
        android:text="흰색 블라우스 셔츠"
        app:layout_constraintStart_toEndOf="@+id/p_img"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/check"
        android:layout_width="27dp"
        android:layout_height="86dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/p_cnt"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:text="1"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/p_change"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p_point"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/p_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="8dp"
        android:text="20,000원"
        app:layout_constraintEnd_toEndOf="@+id/p_cnt"
        app:layout_constraintTop_toBottomOf="@+id/p_cnt" />

    <TextView
        android:id="@+id/s_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="커먼유니크"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prodect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="250dp"
        android:text="배송상품"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/s_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/finish_lin"
        android:layout_width="410dp"
        android:layout_height="11dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/figure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p_price" />

</androidx.constraintlayout.widget.ConstraintLayout>