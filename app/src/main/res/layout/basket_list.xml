<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/p_img"
        android:layout_width="108dp"
        android:layout_height="88dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/nemo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/viling" />

    <TextView
        android:id="@+id/p_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:text="흰색/FREE"
        app:layout_constraintStart_toEndOf="@+id/p_img"
        app:layout_constraintTop_toBottomOf="@+id/p_name" />

    <TextView
        android:id="@+id/p_name"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="흰색 블라우스 셔츠"
        android:textColor="#505050"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/s_name"
        app:layout_constraintStart_toEndOf="@+id/s_name"
        app:layout_constraintTop_toTopOf="@+id/s_name" />

    <Spinner
        android:id="@+id/p_cnt"
        android:layout_width="103dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/nemo"
        android:entries="@array/number_array"
        android:gravity="center"
        android:paddingLeft="33dp"
        android:text="1"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/p_img"
        app:layout_constraintTop_toBottomOf="@+id/p_point"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/p_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:text="20,000원"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/p_cnt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/p_cnt" />

    <TextView
        android:id="@+id/s_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:text="[커먼유니크]"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/p_img"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/close"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/p_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.789"
        app:layout_constraintStart_toEndOf="@+id/p_name"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/x" />

    <ImageView
        android:id="@+id/seomo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/p_cnt"
        app:layout_constraintEnd_toEndOf="@+id/p_cnt"
        app:srcCompat="@drawable/samo" />

</androidx.constraintlayout.widget.ConstraintLayout>