<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="회원가입"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_joinemail"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="이메일을 입력하세요"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/edit_joinpw"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="패스워드를 입력하세요"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edit_joinemail"
        app:layout_constraintStart_toStartOf="@+id/edit_joinemail"
        app:layout_constraintTop_toBottomOf="@+id/edit_joinemail" />

    <EditText
        android:id="@+id/edit_joinname"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="이름을 입력하세요"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edit_joinpw"
        app:layout_constraintStart_toStartOf="@+id/edit_joinpw"
        app:layout_constraintTop_toBottomOf="@+id/edit_joinpw" />

    <Button
        android:id="@+id/btn_join"
        android:layout_width="140dp"
        android:layout_height="54dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#686565"
        android:text="회원가입"
        app:layout_constraintEnd_toEndOf="@+id/edit_joinname"
        app:layout_constraintStart_toStartOf="@+id/edit_joinname"
        app:layout_constraintTop_toBottomOf="@+id/edit_joinname" />

</androidx.constraintlayout.widget.ConstraintLayout>